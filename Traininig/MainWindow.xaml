<Window x:Class="Traininig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock Text="Nombre"/>
        <TextBlock Text="{Binding Path=Name}"/>
        <TextBlock Text="Ventanas"/>
        <TextBlock Text="{Binding Path=Windows}"/>
        <TextBlock Text="Puertas"/>
        <TextBlock Text="{Binding Path=Doors}"/>
    <StackPanel>
       
        <TextBlock Text="Computadora"/>
        <TextBlock Text="{Binding Path=SO}"/>
        <TextBlock Text="Ram"/>
        <TextBlock Text="{Binding Path=Ram}"/>
            </StackPanel>
    </StackPanel>
</Window>
